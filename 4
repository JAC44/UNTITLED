#include <stdio.h>


int
main(void)
{
    float a = 0 , b=0 ,c = 0 , x;
    scanf("%f %f %f",&a,&b,&c);
    for (x=1;x<=3;x++){
        a = a *(1+b/1200)-c;
        if(x==1){
			printf("Balance remaining after first payment: $%.2f\n",a);
		}
		if(x==2){
			printf("Balance remaining after second payment: $%.2f\n",a);
		}
		if(x==3){
			printf("Balance remaining after third payment: $%.2f\n",a);
		}
        
    }
    return 0 ;


}
